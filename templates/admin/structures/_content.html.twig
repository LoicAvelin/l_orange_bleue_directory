{% for structure in structures %}
    <div>
      <h2>Nom : <span>{{ structure.name }}</span></h2>
      <h3>Adresse : {{ structure.address }}</h3>
      <p>Numéro de téléphone : {{ structure.phoneNumber }}</p>
      <p>Date de création : {{ structure.createdAt | date("d-m-Y") }}</p>
      <p>Actif : 
        {% if structure.isActive == 1 %}Oui{% else %}Non
        {% endif %}
      </p>
      <div>
        <a onclick="return deleteConfirm()" href="{{ path('delete_structure', {id : structure.id}) }}" class="main__div--button">Supprimer</a>
      </div>
      <div>
        <a href="{{ path('edit_structure', {id : structure.id}) }}" class="main__div--button">Modifier</a>
      </div>
      <div>
      {% if structure.isActive == 1 %}
        <a onclick="return disableConfirm()" href="{{ path('disable_structure', {id : structure.id}) }}" class="main__div--button">Désactiver</a>
      {% else %}
        <a onclick="return enableConfirm()" href="{{ path('enable_structure', {id : structure.id}) }}" class="main__div--button">Activer</a>
      {% endif %}
      </div>
    </div>
    {% endfor %}