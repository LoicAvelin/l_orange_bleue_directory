{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}- Structure manager{% endblock %}
{% block stylesheets %} 
  <link rel="stylesheet" href="{{ asset('assets/css/readItems.css') }}"> 
{% endblock %}

{% block home %}<a href="/partner">Accueil</a>{% endblock %}
{% block h1 %}Structure{% endblock %}

{% block main %}
  <div>
    <h2>Nom : {{ structure.name }}</h2>
    <h3>Adresse : {{ structure.address }}</h3>
    <p>Numéro de téléphone : {{ structure.phoneNumber }}</p>
    <p>Date de création : {{ structure.createdAt | date("d-m-Y") }}</p>
    <p>Actif : 
      {% if structure.isActive == 1 %}Oui{% else %}Non
      {% endif %}
    </p>
  </div>
{% endblock %}