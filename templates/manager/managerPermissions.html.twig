{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}- Permissions manager{% endblock %}
{% block stylesheets %} 
  <link rel="stylesheet" href="{{ asset('assets/css/readItems.css') }}"> 
{% endblock %}

{% block home %}<a href="/manager">Accueil</a>{% endblock %}
{% block h1 %}Permissions{% endblock %}

{% block main %}
{% for permission in permissions %}
  <div>
    <h2>Nom : {{ permission.name }}</h2>
    <p>Description : {{ permission.description }}</p>
    <p>Actif : 
      {% if permission.isActive == 1 %}Oui{% else %}Non
      {% endif %}
    </p>
    <div>
      {% if permission.isActive == 1 %}
        <a href="{{ path('disable_permission_partner', {id : permission.id}) }}" class="main__div--button">DÃ©sactiver</a>
      {% else %}
        <a href="{{ path('enable_permission_partner', {id : permission.id}) }}" class="main__div--button">Activer</a>
      {% endif %}
    </div>
  </div>
{% endfor %}
{% endblock %}