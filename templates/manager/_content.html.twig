{% for user in users %}
<div class="col">
	<div class="card mb-3 h-100 bg-black bg-opacity-75 border-dark text-center container" style="min-width: 20rem; max-width: 20rem;">
	<div class="card-header">
		<h2 class="card-title"><i class="bi bi-person-fill"></i> |
			<span>{{ user.name }}</span>
		</h2>
	</div>
	<div class="card-body">
		<p><i class="bi bi-person-badge-fill"></i> |
			{% if user.roles == ['ROLE_ADMIN', 'ROLE_MANAGER'] %}Administrateur
				{% elseif user.roles == ['ROLE_PARTNER', 'ROLE_MANAGER'] %}Partenaire
				{% else %}Manager
			{% endif %}
		</p>
		<h3><i class="bi bi-envelope-at-fill"></i> |
			{{ user.email }}</h3>
		<p><i class="bi bi-telephone-fill"></i> |
			{{ user.phoneNumber }}</p>
		<p><i class="bi bi-calendar-plus-fill"></i> |
			{{ user.createdAt | date("d-m-Y") }}</p>
		<p><i class="bi bi-activity"></i> | 
			{% if user.isActive == 1 %}Oui{% else %}Non
			{% endif %}
		</p>
	</div>
	</div>
</div>
{% endfor %}

